{{> organisms-header-varianter }}
{{> organisms-brodsmuler }}
<main id="innhold" tabindex="-1" class="smMa desktop_centered">

    {{> molecules-sideoverskrift-h2-med-lenke:mbn--mobtab(sidetittel: "{{ organisasjonsenhet.tittel }}", url: "{{ organisasjonsenhet.url }}") }}

    <div class="row">
        <div class="col_md_12 col_lg_4">

            {{> molecules-org-meny }}

        </div>
        <div class="col_md_12 col_lg_8 org_main_col">
            
            {{# vanligLinkListe }}
                <div class="mbj">
                    {{> molecules-moduloverskrift-h1:mbs }}
                    {{> molecules-link-liste:mbj }}
                </div>
             {{/ vanligLinkListe }}
            
            {{# linkListeMedFilterSoek }}
                    
                <!-- Hvis listen inneholder skoler og barnehager -->
                {{> molecules-moduloverskrift-h1:mbs }}

                <div id="js_filter_search" class="filter_search_input_container">
                    <label for="filter_search" class="filter_search_label">
                        <span class="screen-reader-text">Søk på navn:</span>
                    </label>
                    <input type="search" id="filter_search" placeholder="Søk" class="js_filter_search_input filter_search_input" />
                    <button class="clear_search_button js_clear_search" style="display: none;">
                        <span class="screen-reader-text">Fjern søkeord</span>
                    </button>
                </div>

                {{# ellerVisAlle }}
                <p class="filter_shortcut_container">
                    Eller vis alle: <a href="#" title="skoler">skoler</a>, <a href="#" title="barnehager">barnehager</a>
                </p>
                {{/ ellerVisAlle }}

                <p class="js_empty_filter_search empty_filter_search" style="display: none;">
                    <strong>Ingenting funnet</strong>
                </p>

                {{> molecules-link-liste-filter-soek:mbj }}
                
            {{/ linkListeMedFilterSoek }}

        </div>
    </div>
</main>
{{> organisms-footer }}