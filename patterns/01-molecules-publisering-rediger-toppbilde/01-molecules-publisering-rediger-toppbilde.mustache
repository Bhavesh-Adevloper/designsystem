<bildevelger>
    
    <div class="mbxxl">
        {{# startLink }}
            <h3 class="helpers_header mbs">Skal siden ha et toppbilde?</h3>
            <a href="" title="" class="button mbn">
                Last opp bilde
            </a>
        {{/ startLink }}
        {{# changeLink }}
            <h3 class="helpers_header mbs">Toppbilde</h3>
            <div class="image-upload-link">
                <a href="" title="Endre toppbilde" class="image-upload-link__change-link">
                    {{# imgLandscape }}
                        <img src="{{ imgLandscape.src }}" alt="{{ imgLandscape.alt }}">
                    {{/ imgLandscape }}
                    <span class="figcaption">
                        Bildetekst lorem ipsum dolor sit amet <span>BILDE: Fotograf</span>
                    </span>
                </a>
                <a href="" title="Slett toppbilde" class="image-upload-link__delete-link">
                    Slett toppbilde
                </a>
            </div>
        {{/ changeLink }}
    </div>
    
    <div class="modal hidden">
        <div class="modal__window">
            <h3 class="modal__window__title">Bildeegenskaper</h3>
            <div class="modal__window__content">
                <form name="bildeForm" class="image-upload ng-untouched ng-pristine ng-valid">
                    <div class="btn_file">
                        <div class="picture_preview_container">

                        </div>

                        <input class="fileupload" id="imageupload" name="file" placeholder="Last opp bilde..." type="file">

                        <label class="label" for="image">Trykk her for å laste opp</label>
                    </div>	

                    <div bilde-json="tmpBilde" crop-ratio="cropRatio" croppie="croppie" emne-id="emneId" image-upload=""></div>

                    <a href="">
                        Klikk for å slette bilde!
                    </a>
                </form>
            </div>
        </div>
    </div>
    
</bildevelger>