{{#redigerVarsel}}
    {{#knapper}}
        <h2 class="helpers_header mbs" id="page_title">Info- og varselboks</h2>
        <div class="mbl">
            <button class="button button--fullwidth mrm mbm">
                    <span class="button--icon--center">
                        <span class="icon-notice grunt-icon grunt-icon--24 grunt-icon--link_color"></span>
                        Legg til infoboks
                    </span>
            </button>

            <button class="button button--danger button--fullwidth mrm mbn">
                    <span class="button--icon--center">
                        <span class="icon-warning--triangle grunt-icon--24--32 grunt-icon grunt-icon--brand_danger" data-grunticon-embed></span>
                        Legg til varselboks
                    </span>
            </button>
        </div>
    {{/knapper}}
    {{#editor}}
        <h2 class="helpers_header helpers_header--infobox">Infoboks
            <a href="#" title="Slett avsnitt" class="button button--remove mbn mlml">Slett</a>
        </h2>
        {{#advarsel}}
            <div class="notice notice--red mbl">
                <div class="notice__content">
                    <span class="icon-warning--triangle grunt-icon" data-grunticon-embed></span>
        {{/advarsel}}
        {{^advarsel}}
            <div class="notice notice--blue mbl">
                <div class="notice__content">
                    <span class="icon-warning--circle grunt-icon" data-grunticon-embed></span>
        {{/advarsel}}
                <script src="https://cdn.ckeditor.com/4.8.0/basic/ckeditor.js"></script>
                <div class="mbml">
                    <textarea name="{{ id }}" class="mbn"></textarea>
                    <script>
                        CKEDITOR.replace( '{{ id }}' );
                    </script>
                </div>
                <div class="mbm">
                    Gyldig til
                    <div class="edit-article-infobox__date_container mls">
                        <input type="date"{{# datoInput }} value="{{ datoInput }}"{{/ datoInput }}{{# paakrevd }} aria-required="true" required{{/ paakrevd }} pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" class="mbn">
                    </div>
                </div>
            </div>
        </div>
    {{/editor}}
{{/redigerVarsel}}
