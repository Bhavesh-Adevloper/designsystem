{{# notice-box }}
    <div class="notice {{ styleModifier }}">
        <div class="notice__content mbs">
            <span class="{{ ikon }} grunt-icon" data-grunticon-embed></span>
            {{# tittel }}<h1>{{ tittel }}</h1>{{/ tittel }}
            {{{ htmlIngress }}}
        </div>
        {{# redigering}}
        <div class="notice__edit">
            <a href="#" title="Slett varnselboks" class="button button--remove mbn mlml">Slett</a>
            <a href="#" class="notice__edit--link">Endre</a>
        </div>
        {{/redigering}}
    </div>
{{/ notice-box }}

