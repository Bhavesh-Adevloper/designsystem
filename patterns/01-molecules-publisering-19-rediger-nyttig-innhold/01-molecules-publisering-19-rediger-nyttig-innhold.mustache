<h2 class="helpers_header">Nyttig innhold</h2>
<p class="helpers_info mbl">Forklarende tekst</p>

{{# redigerNyttigInnholdListe }}
    <div class="edit-accordion {{ styleModifier }}">

        <h3 class="helpers_header mbs" id="nyttigTittel{{ id }}">Tittel</h3>
        <input class="input--title mbml" value="{{ redigerNyttigTittel }}" aria-labelledBy="nyttigTitel{{ id }}">

        <h3 class="helpers_header" id="nyttigURL{{ id }}">URL</h3>
        <input class="input--title mbml" value="{{ nyttigURL }}" aria-labelledby="nyttigURL{{ id }}">

        <div class="image-upload-link mbml">
            {{# startLink }}
                <a href="" class="image-upload-link__start-link">
                    Valgfritt bilde<br>Minimum 1420 piksler bredde
                </a>
                {{/ startLink }}
                {{# changeLink }}
                    <a href="" title="Endre bilde" class="image-upload-link__change-link">
                        {{# imgLandscape }}
                            <img src="{{ imgLandscape.src }}" alt="{{ imgLandscape.alt }}">
                            {{/ imgLandscape }}
                    </a>
                    <a href="" class="image-upload-link__delete-link">
                        Slett bilde
                    </a>
                    {{/ changeLink }}
        </div>

        <div class="edit-accordion__bar">

            <div class="edit-accordion__sort">
                {{# flyttInnhold }}
                    Flytt innhold:
                    {{# flyttOpp }}
                        <a class="edit-accordion__sort__link" href="#">
                            <span class="icon-arrow-ordering grunt-icon grunt-icon--32"></span>Opp
                        </a>
                        {{/ flyttOpp }}
                        {{# flyttNed }}
                            <a class="edit-accordion__sort__link" href="#">
                                <span class="icon-arrow-ordering icon-arrow-ordering--down grunt-icon grunt-icon--32"></span>Ned
                            </a>
                            {{/ flyttNed }}
                            {{/ flyttInnhold }}
            </div>

            <a href="#" title="Slett avsnitt" class="button button--remove mbn mlml">
                Slett
            </a>
        </div>
    </div>

{{/ redigerNyttigInnholdListe}}

<a href="#" class="button mbxxl add-accordion-link">
    Legg til innhold
</a>