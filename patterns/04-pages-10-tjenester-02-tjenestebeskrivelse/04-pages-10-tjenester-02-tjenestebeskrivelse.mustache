{{> organisms-header-varianter }}
{{> organisms-brodsmuler }}
<main id="innhold" tabindex="-1" class="smMa desktop_centered">    
    <article>
        
        {{> molecules-sideoverskrift-h1-med-print(sidetittel: "Navn på tjenesten") }}
        {{> molecules-alternativ-tittel-h2(sidetittel: "Alternativt navn") }}
        
        <div class="row">
            <div class="col_md_12 col_lg_8">
                <div class="article_content">
        
                    {{> molecules-varsel:mbxl }}

                    {{> molecules-notis:mbxl }}

                    {{# imgLandscape }}
                        <figure class="service_image_mobile">
                            <img src="{{ imgLandscape.src }}" alt="{{ imgLandscape.alt }}">
                        </figure>
                    {{/ imgLandscape }}

                    {{# beskrivelse }}
                        <div class="service_description">
                            <p>{{ beskrivelse }}</p>
                        </div>
                    {{/ beskrivelse }}
                    
                    {{# uthevedSkjemaListe }}
                        {{> molecules-skjema-liste:action }}
                    {{/ uthevedSkjemaListe }}

                </div><!-- end .article_content -->
                
                {{> molecules-trekkspill }}
            
            </div>
            <div class="col_md_12 col_lg_4">
        
                {{# imgLandscape }}
                    <figure class="service_image_desktop">
                        <img src="{{ imgLandscape.src }}" alt="{{ imgLandscape.alt }}">
                    </figure>
                    <div style="margin-bottom: 30px;">
                        <p><a href="https://developers.facebook.com/docs/sharing/best-practices#images" title="Facebook" target="_blank">&raquo; Anbefalt bildestørrelse for deling på Facebook</a></p>
                    </div>
                {{/ imgLandscape }}

                {{> molecules-tilbakemelding }}

            </div>
        </div>
        
        {{# footer }}
            {{> organisms-tjeneste-footer }}
        {{/ footer }}

        <div class="row">
            <div class="col_md_6 col_lg_6">

                {{> molecules-moduloverskrift-h2:mbn(tittel: "Relatert informasjon") }}
                {{# relatertInfo }}
                    {{> molecules-link-liste:mbxxl }}
                {{/ relatertInfo }}

            </div>
            <div class="col_md_6 col_lg_6">

                {{> molecules-moduloverskrift-h2:mbn(tittel: "Beslektede tjenester") }}
                {{# beslektedeTjenester }}
                    {{> molecules-link-liste:mbxxl }}
                {{/ beslektedeTjenester }}

            </div>
        </div>
        
    </article>    
</main>
{{> organisms-footer }}