    {{> molecules-sideoverskrift-h1:mbl(sidetittel: "{{ sidetittel }}") }}

    <div class="row">
        <div class="col_md_12 col_lg_4">
            
            {{# meny }}
            {{> molecules-org-meny }}
            {{/ meny }}

        </div>
        <div class="col_md_12 col_lg_8 org_main_col">
            
            {{# varsel }}
            {{> molecules-varsel:mbxxl }}
            {{/ varsel }}
            
            {{# notis }}
            {{> molecules-notis:mbxxl }}
            {{/ notis }}
            
            <div class="clearfix"></div>
            <div class="row_no_clearfix equal_height_container">
                {{> molecules-tout-arbeidsplaner }}

                {{> molecules-tout-skoleruten }}
            </div>
            
            {{# sisteNytt }}
            {{> organisms-siste-nytt }}
            {{/ sisteNytt }}
            
            {{# tjenester }}
            {{> organisms-tjenester-og-skjema-liten }}
