<bildevelger>
    
    <h3 class="helpers_header mbm">Listebilde</h3>
    <div class="image-upload-link mbxxl">
        {{# startLink }}
            <a href="" title="" class="image-upload-link__start-link">
                Valgfritt listebilde<br>Minimum 680 piksler bredde
            </a>
        {{/ startLink }}
        {{# changeLink }}
            <a href="" title="Endre listebilde" class="image-upload-link__change-link">
                {{# imgLandscape }}
                    <img src="{{ imgLandscape.src }}" alt="{{ imgLandscape.alt }}">
                {{/ imgLandscape }}
                <span class="figcaption"></span>
            </a>
            <a href="" title="Slett listebilde" class="image-upload-link__delete-link">
                Slett listebilde
            </a>
        {{/ changeLink }}
    </div>
    
    <div class="modal hidden">
        <div class="modal__window">
            <h3 class="modal__window__title">Bildeegenskaper</h3>
            <div class="modal__window__content">
                <form name="bildeForm" class="image-upload ng-untouched ng-pristine ng-valid">
                    <div class="btn_file">
                        <div class="picture_preview_container">

                        </div>

                        <input class="fileupload" id="imageupload" name="file" placeholder="Last opp bilde..." type="file">

                        <label class="label" for="image">Trykk her for å laste opp</label>
                    </div>	

                    <div bilde-json="tmpBilde" crop-ratio="cropRatio" croppie="croppie" emne-id="emneId" image-upload=""></div>

                    <a href="">
                        Klikk for å slette bilde!
                    </a>
                </form>
            </div>
        </div>
    </div>
    
</bildevelger>