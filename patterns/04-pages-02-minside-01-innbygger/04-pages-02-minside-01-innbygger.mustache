{{> organisms-header-6 }}
{{> organisms-brodsmuler }}
<main id="innhold" tabindex="-1" class="smMa desktop_centered">
    
    {{> molecules-sideoverskrift-h1:mbs(sidetittel: "{{ innbygger.tittel }}") }}

    <div class="page_header_info">
        <p>
            Fødselsnummer: {{ innbygger.nummer }}
            &nbsp;&#8226;&nbsp;
             {{# linkliste }}
                <a href="{{ url }}" title="{{ tittel }}">
                    {{ tittel }}</a>{{# visTegn }}&nbsp;&nbsp;&#8226;&nbsp;{{/ visTegn }}
            {{/ linkliste }}
        </p>
    </div>

    <div class="row">
        <div class="col_md_12 col_lg_9">

            <div class="article_content">

                {{> molecules-moduloverskrift-h2:mbs(tittel: "Påbegynte skjema") }}                
                {{> molecules-element-liste-skjema }}
                <div class="min_side_load_more_container">
                    <a title="Last inn flere skjemaer" href="#">Last inn flere skjema</a>
                </div>
                
                
                {{> molecules-moduloverskrift-h2-med-lenke:mbs(url: "{{ link.pages-saker }}", tittel: "Saker") }}   
                <p>Listen viser byggesaker og noen andre sakstyper. Du kan ha saker med kommunen som ikke vises i denne oversikten.</p>
                {{> molecules-saker-liste }}                
                {{# visFlereSaker }}
                {{> molecules-minside-les-mer }}
                {{/ visFlereSaker }}
                
                
                
                {{> molecules-moduloverskrift-h2:mbs(tittel: "Barnehage og skole") }}
                <ul class="link_list mbj">     
                    <li>
                        <a href="https://bergen.ist-asp.com/bergenpub/login.htm" class="title_cell" title="">
                            Søk plass i barnehage/SFO
                        </a>
                    </li>
                    <li>
                        <a href="https://www.bergen.kommune.no/skjema/Info.aspx?ShortName=BK048-SKOLE-permisjon_undervisning" class="title_cell" title="Permisjon/fri fra skolen" target="_blank">
                            Søk permisjon/fri fra skolen
                        </a>
                    </li>
                </ul>
                
                
                {{> molecules-moduloverskrift-h2:mbs(tittel: "Parkering og piggdekk") }}
                <ul class="link_list mbj">     
                    <li>
                        <a href="https://bergen.ist-asp.com/bergenpub/login.htm" class="title_cell" title="">
                            Boligsoneparkering / piggdekkoblat / parkeringsbøter
                        </a>
                    </li>
                </ul>
                
                
                {{> molecules-moduloverskrift-h2-med-lenke:mbs(url: "{{ link.pages-fakturaer }}", tittel: "Fakturaoversikt") }}
                <p>Faktura vises kun for fakturamottaker.</p>
                {{> molecules-fakturaer }}                
                {{# visFlereFakturaer }}
                {{> molecules-minside-les-mer }}
                {{/ visFlereFakturaer }}


                {{> molecules-moduloverskrift-h2:mbs(tittel: "Eiendommer") }} 
                {{# eiendommer }}
                {{> molecules-element-liste-eiendommer }}
                {{/ eiendommer }}


                {{> molecules-moduloverskrift-h2-med-lenke:mbs(url: "{{ link.pages-lonnsslipper }}", tittel: "Lønnsslipper") }}
                {{> molecules-vedlegg-liste }}                
                {{# visFlereLonnsslipper }}
                {{> molecules-minside-les-mer }}
                {{/ visFlereLonnsslipper }}
            
                
                

                {{# mestbruktoverskrift }}
                {{> molecules-moduloverskrift-h2:mbs }}
                {{/ mestbruktoverskrift }}

                {{# mestbruktliste }}
                {{> molecules-link-liste-enkel }}
                {{/ mestbruktliste }}

               
                
                
                <div class="promo_box">
                    <div class="icon promo_box_icon" style="width: 74px; height: 74px; background-position: -10px 5px;"></div>
                    <h4 class="promo_header">Viktige kommunale tjenester</h4>
                    <p>
                        <a href="https://bergen.ist-asp.com/bergenpub/login.htm" class="title_cell" title="">
                            Barnehageplass/SFO
                        </a>
                        &nbsp;•
                        <a href="https://www.bergen.kommune.no/skjema/Info.aspx?ShortName=BK048-SKOLE-permisjon_undervisning" class="title_cell" title="Permisjon/fri fra skolen" target="_blank">
                            Permisjon/fri fra skolen
                        </a>
                        &nbsp;•
                        <a href="https://bergen.ist-asp.com/bergenpub/login.htm" class="title_cell" title="">
                            Parkering/piggdekkoblat/parkeringsbøter
                        </a>
                    </p>
                </div>
                
                

                {{# personPromo }}
                {{> molecules-promo }}
                {{/ personPromo }}
                
            </div>

            {{> molecules-tilbakemelding }}

        </div>
    </div>

</main>
{{> organisms-footer }}